---
import { Image } from "astro:assets";

import Layout from "../../components/Layout.astro";
import Menu from "../../components/Menu";
import NotAvailable from "../../components/NotAvailable.astro";
---

<Layout titlePage="Portfolio">
    <div class="page">
        <Menu client:load />
        <div class="main">
            <NotAvailable />
            <div class="portfolio">
                <h1>Portfolio</h1>
                <div class="portfolio_content">
                    <a href="https://sellzee-jaden.netlify.app/" target="new">
                        <Image
                            src="/pages/sellzee.png"
                            alt="Sellzee"
                            width={100}
                            height={150}
                            loading="lazy"
                        />
                    </a>
                    <a href="https://lacajita.tv/" target="new">
                        <Image
                            src="/pages/cajita.jpg"
                            alt="La Cajita"
                            width={100}
                            height={150}
                            loading="lazy"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style lang="scss">
    @import "../../styles/main.scss";

    .portfolio {
        min-height: 80vh;
        margin-left: 40px;
        display: none;
        h1 {
            font-size: clamp(100%, 65px, 70px);
            margin-bottom: 50px;
        }
        &_content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            img {
                max-width: 300px;
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 10px;
                cursor: pointer;
            }
        }
    }
</style>
